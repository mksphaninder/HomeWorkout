<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.udayton.homeworkout.Pushup"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pushupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/padding10dp"
        android:text="@string/txtPush"
        android:textColor="@android:color/black"
        android:textSize="@dimen/titleTextSize" />

    <ImageView
        android:id="@+id/pushupsImgView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/txtPush"
        app:srcCompat="@drawable/pushup" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/padding10dp"
        android:paddingTop="@dimen/padding10dp"
        android:text="@string/btntxt"
        android:textColor="@android:color/black" />
</LinearLayout>
