<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.udayton.homeworkout.Plank"
    android:orientation="vertical">

    <TextView
        android:id="@+id/plankTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/padding10dp"
        android:text="@string/txtPlank"
        android:textColor="@android:color/black"
        android:textSize="@dimen/titleTextSize" />

    <ImageView
        android:id="@+id/plankImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/txtPlank"
        app:srcCompat="@drawable/plank" />
</LinearLayout>
